{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress", "json"],
  "testRunner": "vitest",
  "vitest": {
    "configFile": "vitest.config.ts"
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "server/**/*.ts",
    "!server/**/*.test.ts",
    "!server/**/*.spec.ts",
    "!server/index.ts",
    "shared/**/*.ts",
    "!shared/**/*.test.ts"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "timeoutMS": 60000,
  "timeoutFactor": 2,
  "maxConcurrentTestRunners": 2,
  "ignorePatterns": [
    "dist",
    "node_modules",
    "coverage",
    ".stryker-tmp",
    "test-results"
  ],
  "incremental": true,
  "incrementalFile": ".stryker-tmp/incremental.json",
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "disableTypeChecks": "{test,spec,server}/**/*.{js,ts,jsx,tsx}",
  "mutator": {
    "plugins": ["@stryker-mutator/typescript-checker"],
    "excludedMutations": [
      "StringLiteral",
      "ObjectLiteral"
    ]
  },
  "symlinkNodeModules": false,
  "tempDirName": ".stryker-tmp",
  "cleanTempDir": true,
  "fileLogLevel": "info",
  "logLevel": "info"
}
