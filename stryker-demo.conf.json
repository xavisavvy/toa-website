{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress", "json"],
  "testRunner": "vitest",
  "vitest": {
    "configFile": "vitest.config.ts"
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "test/mutation-demo.ts"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": null
  },
  "timeoutMS": 30000,
  "timeoutFactor": 2,
  "concurrency": 2,
  "ignorePatterns": [
    "dist",
    "node_modules",
    "coverage",
    ".stryker-tmp",
    "test-results"
  ],
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "disableTypeChecks": "test/**/*.test.{js,ts}",
  "mutator": {
    "excludedMutations": []
  },
  "tempDirName": ".stryker-tmp",
  "cleanTempDir": true,
  "fileLogLevel": "warn",
  "logLevel": "info"
}
