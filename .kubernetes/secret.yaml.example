---
# ============================================
# Secret Example - DO NOT COMMIT ACTUAL VALUES
# Create actual secret with: kubectl create secret generic toa-secrets --from-literal=...
# ============================================
apiVersion: v1
kind: Secret
metadata:
  name: toa-secrets
type: Opaque
stringData:
  # Database connection
  DATABASE_URL: "postgresql://user:password@host:5432/database"
  
  # Session security
  SESSION_SECRET: "your-super-secret-session-key-change-this"
  
  # CORS configuration
  ALLOWED_ORIGINS: "https://your-domain.com,https://www.your-domain.com"
  
  # API keys (optional)
  YOUTUBE_API_KEY: ""
  ETSY_API_KEY: ""
  ETSY_ACCESS_TOKEN: ""
