# ============================================
# Tales of Aneria - Docker Environment Configuration
# ============================================
# This file is used by docker-compose.yml
# For production deployment, use your orchestrator's secret management

# ============================================
# DEPLOYMENT ENVIRONMENT
# ============================================
NODE_ENV=production

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Use this for docker-compose with included PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@db:5432/toa_website

# PostgreSQL container settings (only for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=toa_website

# ============================================
# SECURITY CONFIGURATION
# ============================================
# IMPORTANT: Generate a secure random string for production
# Use: openssl rand -base64 32
SESSION_SECRET=your-secure-random-session-secret-here

# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# ============================================
# YOUTUBE INTEGRATION
# ============================================
YOUTUBE_API_KEY=your_youtube_api_key_here
VITE_YOUTUBE_API_KEY=your_youtube_api_key_here
VITE_YOUTUBE_PLAYLIST_ID=your_playlist_id_here
VITE_YOUTUBE_CHANNEL_ID=your_channel_id_here

# ============================================
# PODCAST INTEGRATION
# ============================================
VITE_PODCAST_FEED_URL=https://your-podcast-rss-feed-url.com/rss
VITE_PODCAST_SPOTIFY_URL=https://open.spotify.com/show/your-show-id
VITE_PODCAST_APPLE_URL=https://podcasts.apple.com/us/podcast/your-podcast-name/id123456789
VITE_PODCAST_YOUTUBE_MUSIC_URL=https://music.youtube.com/playlist?list=your-playlist-id

# ============================================
# ETSY INTEGRATION (Optional - Deprecated)
# ============================================
ETSY_API_KEY=
ETSY_ACCESS_TOKEN=

# ============================================
# PRINTFUL INTEGRATION
# ============================================
PRINTFUL_API_KEY=your_printful_api_key_here

# ============================================
# STRIPE PAYMENT PROCESSING
# ============================================
# For development/testing, use test keys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
VITE_STRIPE_DONATION_URL=https://donate.stripe.com/test_your_donation_link_here

# For production, use live keys:
# STRIPE_PUBLISHABLE_KEY=pk_live_...
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# VITE_STRIPE_DONATION_URL=https://donate.stripe.com/...

# ============================================
# BUSINESS INFORMATION
# ============================================
BUSINESS_NAME=Tales of Aneria
SUPPORT_EMAIL=TalesOfAneria@gmail.com

# ============================================
# APPLICATION URLS
# ============================================
BASE_URL=http://localhost:5000
VITE_APP_URL=http://localhost:5000
STRIPE_SUCCESS_URL=/checkout/success
STRIPE_CANCEL_URL=/checkout/cancel
